<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/application_view"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="camp.computer.clay.application.Application">

    <camp.computer.clay.application.graphics.Display
        android:id="@+id/app_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/path_editor_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bb000000"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Path Action/Script/Logic Editor/Pipeline"
                android:padding="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44000000"
                android:text="source wave input"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp"/>

            <LinearLayout
                android:id="@+id/path_editor_action_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#44000000"
                    android:text="target pulse output"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#44000000"
                    android:text="target set period (source:wave)"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="12dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#44000000"
                    android:text="target set duty cycle (number:50%)"
                    android:paddingLeft="20dp"
                    android:paddingTop="12dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="12dp" />
            </LinearLayout>

            <Button
                android:id="@+id/path_editor_add_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44000000"
                android:text="add impression"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44000000"
                android:text="add todo"
                android:layout_marginTop="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#44000000"
                android:text="add idea"
                android:paddingLeft="20dp"
                android:paddingTop="12dp"
                android:paddingRight="20dp"
                android:paddingBottom="12dp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_keyboard_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="90dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:visibility="gone">
        <HorizontalScrollView
            android:id="@+id/message_keyboard_layout_perspective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp">
            <LinearLayout
                android:id="@+id/message_keyboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:padding="0dp">
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/message_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="50dp"
        android:background="@drawable/timeline_button"
        android:visibility="gone">
        <HorizontalScrollView
            android:id="@+id/message_content_layout_perspective"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <LinearLayout
                android:id="@+id/message_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/message_content_hint"
                    android:text="I want to..."
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/timeline_button" />
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

