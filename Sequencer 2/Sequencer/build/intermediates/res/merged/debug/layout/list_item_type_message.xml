<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/label"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/event_tag_text_size"
        android:fontFeatureSettings="smcp"
        android:textStyle="normal"
        android:textAlignment="textEnd"
        android:layout_centerVertical="true">
    </TextView>

    <ImageView
        android:id="@+id/icon"
        android:layout_toRightOf="@+id/label"
        android:layout_width="22dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <LinearLayout
        android:id="@+id/content"
        android:layout_toRightOf="@+id/icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/event_tag_text_size"
            android:textStyle="normal"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/message_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/event_annotation_text_size"
            android:textStyle="normal"
            android:textColor="#666666"
            android:textAlignment="textEnd"
            android:gravity="center_vertical">
        </TextView>

        <TextView
            android:id="@+id/address_destination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/event_annotation_text_size"
            android:textStyle="normal"
            android:textColor="#666666"
            android:textAlignment="textEnd"
            android:gravity="center_vertical">
        </TextView>

    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/mokogobo/Workspace/Checkouts/Sequencer/Sequencer%202/Sequencer/src/main/res/layout/list_item_type_message.xml -->