<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable label="DragSortListView">
    <attr label="collapsed_height" format="dimension" />
    <attr label="drag_scroll_start" format="float" />
    <attr label="max_drag_scroll_speed" format="float" />
    <attr label="float_background_color" format="color" />
    <attr label="remove_mode">
      <enum label="clickRemove" value="0" />
      <enum label="flingRemove" value="1" />
    </attr>
    <attr label="track_drag_sort" format="boolean"/>
    <attr label="float_alpha" format="float"/>
    <attr label="slide_shuffle_speed" format="float"/>
    <attr label="remove_animation_duration" format="integer"/>
    <attr label="drop_animation_duration" format="integer"/>
    <attr label="drag_enabled" format="boolean" />
    <attr label="sort_enabled" format="boolean" />
    <attr label="remove_enabled" format="boolean" />
    <attr label="drag_start_mode">
      <enum label="onDown" value="0" />
      <enum label="onMove" value="1" />
      <enum label="onLongPress" value="2"/>
    </attr>
    <attr label="drag_handle_id" format="integer" />
    <attr label="fling_handle_id" format="integer" />
    <attr label="click_remove_id" format="integer" />
    <attr label="use_default_controller" format="boolean" />
  </declare-styleable>
</resources>
