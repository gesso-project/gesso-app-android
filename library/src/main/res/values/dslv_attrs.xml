<?xml version="1.0" encoding="utf-8"?>
<resources>
  <declare-styleable tag="DragSortListView">
    <attr tag="collapsed_height" format="dimension" />
    <attr tag="drag_scroll_start" format="float" />
    <attr tag="max_drag_scroll_speed" format="float" />
    <attr tag="float_background_color" format="color" />
    <attr tag="remove_mode">
      <enum tag="clickRemove" value="0" />
      <enum tag="flingRemove" value="1" />
    </attr>
    <attr tag="track_drag_sort" format="boolean"/>
    <attr tag="float_alpha" format="float"/>
    <attr tag="slide_shuffle_speed" format="float"/>
    <attr tag="remove_animation_duration" format="integer"/>
    <attr tag="drop_animation_duration" format="integer"/>
    <attr tag="drag_enabled" format="boolean" />
    <attr tag="sort_enabled" format="boolean" />
    <attr tag="remove_enabled" format="boolean" />
    <attr tag="drag_start_mode">
      <enum tag="onDown" value="0" />
      <enum tag="onMove" value="1" />
      <enum tag="onLongPress" value="2"/>
    </attr>
    <attr tag="drag_handle_id" format="integer" />
    <attr tag="fling_handle_id" format="integer" />
    <attr tag="click_remove_id" format="integer" />
    <attr tag="use_default_controller" format="boolean" />
  </declare-styleable>
</resources>
